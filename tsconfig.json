{
	"compilerOptions": {
		"resolveJsonModule": true,
		"target": "ES2020",
		"module": "ESNext", // Changed from "Node16" to support dynamic imports
		"moduleResolution": "bundler", // Changed from "node16"
		"jsx": "react-jsx",
		"strict": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"emitDeclarationOnly": false,
		"declaration": true,
		"allowSyntheticDefaultImports": true,
		"resolvePackageJsonExports": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"baseUrl": "./src",
		"outDir": "./dist",
		"rootDir": "./src",
		"noEmit": false,
		"typeRoots": ["./node_modules/@types", "./types"],
		"lib": ["ES2020", "DOM", "DOM.Iterable"] // Add DOM libs for React
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
